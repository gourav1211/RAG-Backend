{
  "name": "rag-backend-ai-agent",
  "version": "1.0.0",
  "description": "A production-ready RAG (Retrieval-Augmented Generation) AI Agent backend with multi-modal capabilities including document retrieval, mathematical calculations, weather data, and conversational memory management.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "vercel-build": "npm run build"
  },
  "keywords": [
    "ai",
    "rag", 
    "chatbot",
    "openai",
    "pinecone",
    "typescript",
    "express",
    "backend",
    "retrieval-augmented-generation",
    "llm"
  ],
  "author": "Gourav",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@pinecone-database/pinecone": "^6.1.2",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "mathjs": "^14.6.0",
    "openai": "^5.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mathjs": "^9.4.1",
    "@types/node": "^24.2.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
